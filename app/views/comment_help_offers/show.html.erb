<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Comment help offer #<%= @comment_help_offer.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/comment_help_offers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_comment_help_offer/<%= @comment_help_offer.id %>" class="btn btn-block btn-outline-secondary">
          Delete comment help offer
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Author
      </dt>
      <dd>
        <%= @comment_help_offer.author_id %>
      </dd>

      <dt>
        Help offer
      </dt>
      <dd>
        <%= @comment_help_offer.help_offer_id %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @comment_help_offer.body %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@comment_help_offer.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@comment_help_offer.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit comment help offer
    </h2>

    <form action="/modify_comment_help_offer/<%= @comment_help_offer.id %>"  method="post" >
      <div class="form-group">
        <label for="author_id_box">
          Author
        </label>

        <input type="text" id="author_id_box" name="query_author_id" class="form-control" value="<%= @comment_help_offer.author_id %>">
      </div>

      <div class="form-group">
        <label for="help_offer_id_box">
          Help offer
        </label>

        <input type="text" id="help_offer_id_box" name="query_help_offer_id" class="form-control" value="<%= @comment_help_offer.help_offer_id %>">
      </div>

      <div class="form-group">
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" class="form-control" rows="3"><%= @comment_help_offer.body %></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update comment help offer
      </button>
    </form>
  </div>
</div>

<hr>
