<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all help offers
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new help offer
    </h2>

    <form action="/insert_help_offer" method="post">
      <div class="form-group">
        <label for="offering_id_box">
          Offering
        </label>

        <input type="text" id="offering_id_box" name="query_offering_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <textarea id="title_box" name="query_title" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="date_begin_box">
          Date begin
        </label>

        <input type="date" id="date_begin_box" name="query_date_begin" class="form-control">
      </div>

      <div class="form-group">
        <label for="date_end_box">
          Date end
        </label>

        <input type="date" id="date_end_box" name="query_date_end" class="form-control">
      </div>

      <div class="form-group">
        <label for="location_box">
          Location
        </label>

        <textarea id="location_box" name="query_location" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create help offer
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Offering
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Date begin
        </th>

        <th>
          Date end
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @help_offers.each do |help_offer| %>
      <tr>
        <td>
          <%= help_offer.id %>
        </td>

        <td>
          <%= help_offer.offering_id %>
        </td>

        <td>
          <%= help_offer.title %>
        </td>

        <td>
          <%= help_offer.description %>
        </td>

        <td>
          <%= help_offer.date_begin %>
        </td>

        <td>
          <%= help_offer.date_end %>
        </td>

        <td>
          <%= help_offer.location %>
        </td>

        <td>
          <%= time_ago_in_words(help_offer.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(help_offer.updated_at) %> ago
        </td>

        <td>
          <a href="/help_offers/<%= help_offer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
